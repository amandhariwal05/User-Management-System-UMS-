<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: linear-gradient(to right, #6a11cb, #2575fc);
      }
      table {
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
      }
      th,
      td {
        vertical-align: middle;
      }
    </style>
  </head>
  <body
    class="d-flex justify-content-center align-items-center vh-100 text-dark"
  >
    <div class="card shadow-lg p-4" style="width: 90%; max-width: 1000px">
      <h2 class="text-center mb-4 fw-bold">All Users</h2>

      <div class="table-responsive">
        <table class="table table-bordered text-center align-middle">
          <thead class="table-primary">
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>Password</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= user.password %></td>
              <td>
                <form
                  action="/user/<%= user.id %>"
                  method="GET"
                  style="display: inline"
                >
                  <button
                    type="submit"
                    class="btn btn-danger btn-sm rounded-pill"
                  >
                    Edit
                  </button>
                </form>
                <form
                  action="/user/<%= user.id %>?_method=DELETE"
                  method="POST"
                  style="display: inline"
                >
                  <button
                    type="submit"
                    class="btn btn-danger btn-sm rounded-pill"
                  >
                    Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="text-center mt-3">
        <a href="/" class="btn btn-secondary rounded-pill px-4">Back</a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
